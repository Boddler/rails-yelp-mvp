<div class="container">
  <h1>All Restaurants</h1>
  <div class="cards">
    <% @restaurants.each do |restaurant|%>
      <div class="card">
        <div class="card-category color:white" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= "https://picsum.photos/360/180" %>)">
          <%= link_to"#{restaurant.name}", restaurant_path(restaurant), class: "link-unstyled"%>
          <br>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add restaurant", new_restaurant_path, class: "btn btn-dark mt-3 mt-2" %>
</div>
<% random_image_url = "https://picsum.photos/360/180" %>
